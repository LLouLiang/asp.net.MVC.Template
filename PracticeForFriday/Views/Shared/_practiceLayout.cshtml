<html>
<head>
	<title>
		partice
	</title>
	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/materialcss")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/angularjs")
	@Scripts.Render("~/bundles/angularAria")
	@Scripts.Render("~/bundles/angularAnim")
	@Scripts.Render("~/bundles/angularMaterial")
	<style>
		.dropbtn {
			color: white;
			width: 40px;
			height: 40px;
			border: 1px;
			border-radius: 25px;
			cursor: pointer;
		}

		.dropdown {
			position: relative;
			display: inline-block;
		}

		.dropdown-content {
			display: none;
			position: absolute;
			background-color: #f9f9f9;
			min-width: 160px;
			box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
			z-index: 1;
		}

			.dropdown-content li {
				color: black;
				padding: 12px 16px;
				text-decoration: none;
				display: block;
			}

				.dropdown-content li:hover {
					background-color: #f1f1f1
				}

		.dropdown:hover .dropdown-content {
			display: block;
		}

		.dropdown:hover .dropbtn {
			background-color: #3e8e41;
		}
	</style>
</head>
<body>
	<div class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
		<div class="container topnav">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand topnav" href="#">Practice</a>
			</div>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-right">
					<li>
						@Html.ActionLink("Home", "MagazineView", "Magazine")
					</li>
					@if (!User.Identity.IsAuthenticated)
					{
						<li>
							@Html.ActionLink("Login", "Login", "Project")
						</li>
						<li>
							@Html.ActionLink("Create A new Account", "Registration", "Registration")
						</li>
						<li><img src="~/Images/user.jpg" class="dropbtn" /></li>
					}
					else
					{
						<li>@Html.ActionLink("Top Secret", "content", "Secret")</li>
						if (Session["imgUrl"] != null)
						{
							@Html.Partial("~/Views/Shared/_profilePartial.cshtml");
						}
						else
						{
							<li><img src="~/Images/user.jpg" class="dropbtn" /></li>
						}
						<li>@Html.ActionLink("Logout", "logout", "Secret")</li>
					}

				</ul>
			</div>
			<!-- /.navbar-collapse -->
		</div>
		<!-- /.container -->
	</div>
	<div class="container"style="margin-top: 52px">
		@RenderBody()
	</div>
</body>
</html>
